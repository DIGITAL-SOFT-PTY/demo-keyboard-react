{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es5",
        "outDir": "build",
        "module": "es6",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "declaration": false,
        "removeComments": true,
        "noImplicitReturns": true,
        "noUnusedLocals": false,
        "strict": true,
        "lib": [
            "es6",
            "es7",
            "dom"
        ],
        "allowJs": true,
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "src",
        "allowSyntheticDefaultImports": true,
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}